<Window x:Class="ZPI_Paletyzator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZPI_Paletyzator.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="535.294" Width="1000">
    <Grid>
        <Label Content="PackageInfo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Separator HorizontalAlignment="Left" Height="5" Margin="10,53,0,0" VerticalAlignment="Top" Width="500" Opacity="0.25"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding Path=PackageHeight}" HorizontalAlignment="Left" Height="30" Margin="100,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Width" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding Path=PackageWidth}" HorizontalAlignment="Left" Height="30" Margin="100,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Length" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding Path=PackageLength}" HorizontalAlignment="Left" Height="30" Margin="100,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Weight" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding Path=PackageWeight}" HorizontalAlignment="Left" Height="30" Margin="100,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <CheckBox Content="seam at the beginning" Command="{Binding Path=seamAtBeginCommand}" HorizontalAlignment="Left" Margin="100,215,0,0" VerticalAlignment="Top"/>
        <Label Content="PalleteInfo" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Separator HorizontalAlignment="Left" Height="5" Margin="10,279,0,0" VerticalAlignment="Top" Width="500" Opacity="0.25"/>
        <Label Content="Width" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding PalleteWidth}" HorizontalAlignment="Left" Height="30" Margin="100,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Length" HorizontalAlignment="Left" Margin="10,324,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding PalleteLength}" HorizontalAlignment="Left" Height="30" Margin="100,324,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Max weight" HorizontalAlignment="Left" Margin="10,359,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding PalleteMaxHeight}" HorizontalAlignment="Left" Height="30" Margin="100,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Label Content="Max height" HorizontalAlignment="Left" Margin="10,394,0,0" VerticalAlignment="Top" FontSize="15" Width="85"/>
        <TextBox Text="{Binding PalleteMaxWeight}" HorizontalAlignment="Left" Height="30" Margin="100,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Button Command="{Binding Path=calculateCommand}" Content="Calculate" HorizontalAlignment="Left" Margin="10,441,0,0" Width="256" Height="36" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Path=CalculateOutput}" HorizontalAlignment="Left" Height="36" Margin="271,441,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>
    </Grid>
</Window>
